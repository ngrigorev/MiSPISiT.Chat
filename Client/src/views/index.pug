extends shared/layout.pug

block title
    title Simple Chat

block titleHeader
    h1 Simple Chat

block content
    .container
        .row
            select#chat.form-control
                option() My Chat
                option() Other Chat 1
                option() Other Chat 2
            
            input#name.form-control(value="NG", 
                placeholder="Input your name")
            
            #chat-box.form-control
                #chat-content
            
            textarea#text.form-control(rows="3", 
            placeholder="Input your message and press Enter")